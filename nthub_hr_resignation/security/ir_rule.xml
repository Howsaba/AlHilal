<?xml version="1.0"?>
<odoo>
    <record id="employee_resignation_rule_employee" model="ir.rule">
        <field name="name">Employee Resignation</field>
        <field name="model_id" ref="model_hr_employee_resignation"/>
        <field name="domain_force">['|', '|',('employee_id.user_id', '=', user.id),
            ('employee_id.parent_id.user_id', '=', user.id),
            ('employee_id.coach_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    
    <record id="employee_resignation_rule_other" model="ir.rule">
        <field name="name">Employee resignation Others</field>
        <field name="model_id" ref="model_hr_employee_resignation"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr.group_hr_user')), (4,ref('account.group_account_manager'))]"/>
    </record>
</odoo>